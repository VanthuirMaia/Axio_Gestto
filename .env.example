# ============================================
# DJANGO CORE SETTINGS
# ============================================
# IMPORTANTE: Gere uma nova SECRET_KEY segura para produção
# Use: python -c "import secrets; print(''.join(secrets.choice('abcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*(-_=+)') for i in range(50)))"
SECRET_KEY=your-secret-key-here-change-in-production

# Modo debug - SEMPRE False em produção
DEBUG=False

# Hosts permitidos - Adicione seu domínio de produção
ALLOWED_HOSTS=localhost,127.0.0.1,seu-dominio.com

# ============================================
# DATABASE SETTINGS
# ============================================
# Para produção com PostgreSQL (recomendado)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=gestao_negocios
DB_USER=postgres
DB_PASSWORD=your-strong-database-password-here
DB_HOST=db
DB_PORT=5432

# ============================================
# CORS SETTINGS
# ============================================
# Adicione as origens permitidas do seu frontend
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://seu-dominio.com

# ============================================
# EMAIL SETTINGS
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-app-gmail
DEFAULT_FROM_EMAIL=noreply@seu-dominio.com

# ============================================
# REDIS & CELERY
# ============================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# API SETTINGS (n8n Bot)
# ============================================
# IMPORTANTE: Gere uma nova API_KEY segura para produção
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
N8N_API_KEY=your-n8n-api-key-here-change-in-production

# URL do webhook n8n (onde Django encaminha mensagens)
N8N_WEBHOOK_URL=https://seu-n8n.com/webhook/bot-universal

# ============================================
# EVOLUTION API (WhatsApp Integration)
# ============================================
# URL da Evolution API
EVOLUTION_API_URL=https://evolution.axiodev.cloud

# API Key Global da Evolution
# Obtenha no painel da Evolution: Settings → API Key
EVOLUTION_API_KEY=your-evolution-api-key-here

# ============================================
# SaaS SETTINGS - Pagamentos e Assinaturas
# ============================================
# URL do site (para emails e redirects)
SITE_URL=https://seu-dominio.com

# Stripe (Cartão de Crédito - Internacional)
# Obtenha em: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# SUPERUSER (apenas para primeiro deploy)
# ============================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@seu-dominio.com
DJANGO_SUPERUSER_PASSWORD=senha-inicial-forte-aqui
