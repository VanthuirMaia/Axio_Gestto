# ============================================
# CONFIGURAÇÃO DE PRODUÇÃO - gestto.app.br
# ============================================
# Este é um exemplo de .env para produção
# Copie para .env e preencha com valores reais

# ============================================
# DJANGO CORE SETTINGS
# ============================================
# Gere uma nova SECRET_KEY segura:
# python -c "import secrets; print(''.join(secrets.choice('abcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*(-_=+)') for i in range(50)))"
SECRET_KEY=GERE-UMA-CHAVE-SEGURA-AQUI-50-CARACTERES

# SEMPRE False em produção
DEBUG=False

# Domínio de produção
ALLOWED_HOSTS=gestto.app.br,www.gestto.app.br,localhost,127.0.0.1

# ============================================
# DATABASE SETTINGS - PostgreSQL
# ============================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=gestao_negocios
DB_USER=postgres
DB_PASSWORD=SENHA-FORTE-DO-BANCO-AQUI
DB_HOST=db
DB_PORT=5432

# ============================================
# CORS SETTINGS
# ============================================
CORS_ALLOWED_ORIGINS=https://gestto.app.br,https://www.gestto.app.br

# ============================================
# EMAIL SETTINGS - Zoho Mail (Recomendado)
# ============================================
# Após configurar Zoho Mail, use estas configurações:
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.zoho.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@gestto.app.br
EMAIL_HOST_PASSWORD=SUA-SENHA-ZOHO-AQUI
DEFAULT_FROM_EMAIL=noreply@gestto.app.br

# TEMPORÁRIO: Se ainda não configurou email, use Console:
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=
# EMAIL_PORT=
# EMAIL_USE_TLS=
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=
# DEFAULT_FROM_EMAIL=noreply@gestto.app.br

# ============================================
# REDIS & CELERY
# ============================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# API SETTINGS (n8n Bot)
# ============================================
# Gere uma API key segura:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
N8N_API_KEY=GERE-UMA-API-KEY-SEGURA-AQUI

# URL do webhook n8n (configure no n8n e cole aqui)
# Exemplo: https://n8n.axiodev.cloud/webhook/bot-universal
N8N_WEBHOOK_URL=https://SEU-N8N.com/webhook/bot-universal

# ============================================
# EVOLUTION API (WhatsApp Integration)
# ============================================
EVOLUTION_API_URL=https://evolution.axiodev.cloud
EVOLUTION_API_KEY=SUA-EVOLUTION-API-KEY-AQUI

# ============================================
# SaaS SETTINGS - URLs e Domínio
# ============================================
SITE_URL=https://gestto.app.br

# ============================================
# PAGAMENTOS - Stripe (Opcional)
# ============================================
# Se for usar Stripe, configure:
STRIPE_PUBLIC_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Para testes, use test keys:
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# ============================================
# PAGAMENTOS - Asaas (Opcional)
# ============================================
ASAAS_API_KEY=
ASAAS_SANDBOX=False

# ============================================
# SUPERUSER (Primeiro Deploy)
# ============================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=contato@gestto.app.br
DJANGO_SUPERUSER_PASSWORD=SENHA-FORTE-ADMIN-AQUI
