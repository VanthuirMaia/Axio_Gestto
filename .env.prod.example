# ============================================
# AMBIENTE DE PRODUÇÃO
# ============================================
# Este é um arquivo EXEMPLO para produção
# Copie este arquivo para .env.prod e preencha com valores reais
# NUNCA commite o arquivo .env.prod no Git!

# Django Environment
DJANGO_ENV=production

# ============================================
# DJANGO CORE SETTINGS
# ============================================
# IMPORTANTE: Gere uma nova SECRET_KEY segura
# Use: python -c "import secrets; print(''.join(secrets.choice('abcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*(-_=+)') for i in range(50)))"
SECRET_KEY=MUDE-ISTO-PARA-UMA-SECRET-KEY-ALEATORIA-E-SEGURA-EM-PRODUCAO

# Debug SEMPRE False em produção
DEBUG=False

# Hosts permitidos - APENAS seu domínio de produção
ALLOWED_HOSTS=seudominio.com,www.seudominio.com

# ============================================
# DATABASE SETTINGS - POSTGRESQL
# ============================================
# Produção usa PostgreSQL (mais robusto)

# OPÇÃO 1: DATABASE_URL (Supabase/Heroku style)
DATABASE_URL=postgresql://usuario:senha@host:5432/nome_banco

# OPÇÃO 2: Variáveis individuais (se não usar DATABASE_URL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=gestto_production
DB_USER=gestto_user
DB_PASSWORD=SENHA-FORTE-DO-BANCO-AQUI
DB_HOST=seu-servidor-postgres.com
DB_PORT=5432

# ============================================
# EMAIL SETTINGS - PRODUÇÃO
# ============================================
# Use um provedor real (Brevo recomendado - 300 emails grátis/dia)

# Brevo/Sendinblue (Recomendado)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@seudominio.com
EMAIL_HOST_PASSWORD=SUA-SENHA-BREVO-AQUI
DEFAULT_FROM_EMAIL=noreply@seudominio.com

# ============================================
# CORS SETTINGS
# ============================================
CORS_ALLOWED_ORIGINS=https://seudominio.com,https://www.seudominio.com

# ============================================
# SITE URL
# ============================================
SITE_URL=https://seudominio.com

# ============================================
# API SETTINGS (n8n Bot)
# ============================================
# Gere uma chave segura: python -c "import secrets; print(secrets.token_urlsafe(32))"
N8N_API_KEY=GERE-UMA-CHAVE-ALEATORIA-SEGURA-AQUI
N8N_WEBHOOK_URL=https://seu-n8n.com/webhook/bot-universal

# ============================================
# EVOLUTION API (WhatsApp Integration)
# ============================================
EVOLUTION_API_URL=https://evolution.seudominio.com
EVOLUTION_API_KEY=SUA-CHAVE-EVOLUTION-AQUI

# ============================================
# PAGAMENTOS - PRODUÇÃO
# ============================================

# Stripe (Modo produção - chaves LIVE)
STRIPE_PUBLIC_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_live_...

# Asaas (Produção - desativa sandbox)
ASAAS_API_KEY=SUA-CHAVE-ASAAS-PRODUCAO
ASAAS_SANDBOX=False

# ============================================
# REDIS & CELERY
# ============================================
REDIS_URL=redis://seu-redis.com:6379/0
CELERY_BROKER_URL=redis://seu-redis.com:6379/0
CELERY_RESULT_BACKEND=redis://seu-redis.com:6379/0

# ============================================
# ADMIN CUSTOMIZADO (Segurança)
# ============================================
# Troque 'admin/' por uma URL secreta (ex: 'painel-secreto-xyz/')
ADMIN_URL=admin/

# ============================================
# SEGURANÇA - PRODUÇÃO
# ============================================
# Todas as configs de segurança já estão em prod.py
# Certifique-se de que:
# ✓ SECRET_KEY é única e segura
# ✓ DEBUG=False
# ✓ ALLOWED_HOSTS contém apenas seu domínio
# ✓ DATABASE_URL ou credenciais do banco são seguras
# ✓ EMAIL configurado corretamente
# ✓ HTTPS configurado no servidor
# ✓ Firewall bloqueando portas não utilizadas
# ✓ Backups automáticos do banco configurados

# ============================================
# SUPERUSER (apenas para primeiro deploy)
# ============================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@seudominio.com
DJANGO_SUPERUSER_PASSWORD=SENHA-INICIAL-FORTE-AQUI

# ============================================
# CHECKLIST PRÉ-DEPLOY
# ============================================
# [ ] SECRET_KEY alterada
# [ ] DEBUG=False
# [ ] ALLOWED_HOSTS configurado
# [ ] Banco PostgreSQL configurado e testado
# [ ] Email SMTP testado
# [ ] Redis configurado
# [ ] HTTPS configurado no servidor
# [ ] Certificado SSL válido
# [ ] Variáveis de pagamento em modo produção
# [ ] Backups automáticos configurados
# [ ] Monitoring configurado
# [ ] Firewall configurado
